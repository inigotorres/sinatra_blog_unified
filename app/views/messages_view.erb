<body>
  <p><a href="/admin">Go back</a></p>

  <% @messages.each do |message| %>
    <div class="message">
    <p>Message id: <%= message.id %></p>
    <p>Name: <%= message.name %></p>
    <p>Email: <%= message.email %></p>
    <p>Subject: <%= message.subject %></p>
    <p>Content: <%= message.content %></p>
    <a href="mailto:<%=message.email%>?subject=RE:%20<%=message.subject%>">Answer!</a>
    <form id="delete" action="/admin/message_delete/<%= message.id %>" method="post" onsubmit="return confirm('Do you really want to delete this message?');">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete">
    </form>
    </div>
  <% end %>

  <p><a href="/admin">Go back</a></p>
</body>
