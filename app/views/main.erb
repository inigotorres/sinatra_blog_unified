<body>
  <% @blog_posts.each do |blog_post| %>
    <div class="blog_post">
    <h2><%= blog_post.title %></h2>  
    <small>Created by <%= blog_post.author %> at <%= blog_post.created_at %></small>
    <p><%= blog_post.content %></p>
    </div>
  <% end %>

  <small><a href="/submit_post">Submit a new entry!</a></small>
</body>
